<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>My Blog</title>
</head>
<body>
  <h1>My Blog</h1>
  <ul id="posts"></ul>

  <script>
    fetch('posts.json')
      .then(res => res.json())
      .then(posts => {
        const list = document.getElementById('posts');
        posts.forEach(post => {
          const li = document.createElement('li');
          li.innerHTML = `<strong>${post.title}</strong> (${post.date}): ${post.content}`;
          list.appendChild(li);
        });
      });
  </script>
</body>
</html>
